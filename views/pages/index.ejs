    <body>
     <div class="container">
      <header>
        <h1>C02nsume</h1>
      </header>

      <form method="post" action="/upload" enctype="multipart/form-data">
          <p><input type="file"  accept="image/*" name="photo" id="file" onchange="loadFile(event)"></p>
          <input class="btn mt-3" type="submit" value="upload">
          <p><img id="output" width="200" /></p>
      </form>

      <main id="webcam-app">
